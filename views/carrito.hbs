<div class="container mt-3">
        <div >
            {{> navBar}}
            {{> usuario}}
        </div>
            <h2 style="color:crimson;">Carrito</h2>
       
        {{#if cartProducts}}
            <div class="table-responsive" id="historialProductos" >
                <table class="table table-dark" id="listadoProductos">
                    <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Icono</th> </tr>
                    
                    {{#each cartProducts}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>
                            <img width="30" src="{{this.thumbnail}}" alt="">
                        </td>
                    </tr>
                    
                    {{/each}}
                    
                </table>
            </div>
        {{else}}
            <h3 class="alert alert-warning">No se encontraron productos en el carrito</h3>
        {{/if}}
        </div>